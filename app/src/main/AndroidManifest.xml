<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.paul.fitme">

    <!-- To auto-complete the email text field in the login form with userEntityuser's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/web_hi_res_512"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/NoActionBar">
            android:windowSoftInputMode="adjustPan"
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AccountCreationActivity">
            android:theme="@style/NoActionBar">
            android:windowSoftInputMode="adjustPan"
        </activity>
        <activity android:name=".ImcActivity">
            android:theme="@style/NoActionBar">
            android:windowSoftInputMode="adjustPan"
        </activity>
        <activity android:name=".RecipeActivity">
            android:theme="@style/NoActionBar">
            android:windowSoftInputMode="adjustPan"
        </activity>
    </application>

</manifest>